<h1>The Ultimate To-Do List</h1>

<h2><%= link_to "Add A New Task", new_task_path %></h2>
<hr>

<% @tasks.each do |task| %>
  <h3>
    <%= link_to task.name, task_path(task) %>
    <% if task.completed %>
      <%= "[X]" %>
    <% else %>
      <%= "[ ]" %>
    <% end %>
  </h3>
  <p>
  <%= link_to "Edit Task", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task), method: :delete %>
  <hr>
  </p>
<% end %>



